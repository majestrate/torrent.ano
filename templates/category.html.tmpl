<!doctype html>
<html>
    <head>
      <title> {{ .Site }} -- {{ .Category.Name }} </title>
      <link rel="stylesheet" href="/static/style.css" />
      <link href="http://{{ .Domain }}/c/{{ .Category.ID }}/?t=atom" type="application/atom+xml" rel="alternate" title="{{ .Category.Name}} torrents on {{ .Site }}" />
    </head>
    <body>
        <center>
          <h1> {{ .Category.Name }} </h1>
          <h3> <a href="/">Front Page</a> </h3>
          {{ if .HasNextPage }}<h3> <a href="/c/{{ .Category.ID }}/?p={{ .NextPage }}"> Next </a> </h3>{{ end }}
          {{ if .HasPrevPage }}<h3> <a href="/c/{{ .Category.ID }}/?p={{ .PrevPage }}"> Prev </a> </h3>{{ end }}
        <table>
            <thead>
                <tr>
                    <th></th>
                    <th>Name</th>
                    <th>Size</th>
                    <th>Uploaded</th>
                </tr>
            </thead>
            <tbody>
                {{ range .Torrents }}
                <tr>
                  <td class="info">
                    <a href="magnet:?xt=urn:btih:{{ .InfoHash }}"><img src="/static/magnet.png"></img></a>
                    <a href="{{ .DownloadLink }}"><img src="/static/download.png"></img></a>
                  </td>
                  <td class="info"><a href="/t/{{ .InfoHash }}/">{{ .Name }}</a></td>
                  <td class="info">{{ .SizeString }}</td>
                  <td class="info"><time class="date" datetime="{{ FormatDateGlobal .UploadedAt }}" title="{{ FormatDateRFC2822 .UploadedAt }}">{{ FormatDate .UploadedAt }}</time></td>
                </tr>
                {{ end }}
            </tbody>
        </table>
        <hr/>
          <h2> Add a torrent </h2>
          <h4> {{.TrackerURL}} will be added as a default tracker, existing trackers will be preserved.</h4>
        </center>
        <div class="postform" align="center">
          <form method="POST" enctype="multipart/form-data">
            <table cellspacing="1" cellpadding="0">
              <tr>
                <th>Torrent Name</th>
                <td><input id="name" type="text" name="torrent-name" class="posttext" /></td>
              </tr>
              <tr>
                <th>Torrent Tags</th>
                <td><input id="tags" type="text" name="torrent-tags" class="posttext" /></td>
              </tr>
              <tr>
                <th>Description</th>
                <td><textarea id="description" name="torrent-description" class="postarea"></textarea></td>
              </tr>
              {{ if .Captcha }}
              <tr>
                <th>
                  Captcha
                </th>
                <td class="captcha_img">
                  <img id="captcha_img" src="/captcha/{{.Captcha}}.png" alt="captcha" />
                </td>
              </tr>
              <tr>
                <th>
                  Solution
                </th>
                <td>
                  <input type="hidden" name="captcha-id" value="{{.Captcha}}" />
                  <input type="text" name="captcha-solution" autocomplete="off" id="captcha_solution" height="175" width="350" />
                </td>
              </tr>
              {{ end }}
              <tr>
                <th>Torrent File</th>
                <td>
                  <table cellspacing="0" cellpadding="0" width="100%">
                    <tr>
                      <td><input type="file" name="torrent-file" class="postfile" /></td>
                      <td align="right"><input type="submit" value="upload" class="postbutton"/></td>
                    </tr>
                  </table>
                </td>
              </tr>
            </table>
          </form>
        </div>
        {{ template "script.html.tmpl" . }}
    </body>
</html>

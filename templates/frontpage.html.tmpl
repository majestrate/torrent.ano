<html>
    <head>
        <title> {{ .Site }} </title>
    </head>
    <body>
        <center>
            <h1> {{ .Site }} </h1>
            <hr />
            <h3> Categories </h3>
        <table>
            <tbody>
                {{ range .Categories }}
                <tr>
                    <td><a href="/c/{{ .ID }}">{{ .Name }}</a></td>
                </tr>
                {{ end }}
            </tbody>
        </table>
        <hr />
        <h3> Recent Uploads </h3>
        <table>
            <thead>
                <tr>
                    <th>Category</th>
                    <th>Name</th>
                    <th>Uploaded</th>
                </tr>
            </thead>
            <tbody>
                {{ range .Torrents }}
                <tr>
                    <td><a href="/c/{{ .Category.ID }}/">{{ .Category.Name }}</a></td>
                    <td><a href="/t/{{ .InfoHash }}/">{{ .Name}}</td>
                    <td>{{ .UploadedAt }}</td>
                </tr>{{ end }}
            </tbody>
        </table>

        </center>
    </body>
</html>

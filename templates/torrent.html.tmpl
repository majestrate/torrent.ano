<!doctype html>
<html>
    <head>
        <title> {{ .Site }} - {{ .Torrent.Name }} </title>
        <link rel="stylesheet" href="/static/style.css" />
    </head>
    <body>
        <center>
            <h3> <a href="/">Front Page</a> </h3>
            <table>
                <tbody>
                    <tr>
                        <td>Name </td>
                        <td>{{ .Torrent.Name }}</td>
                    </tr>
                    <tr>
                        <td>Infohash </td>
                        <td>{{ .Torrent.InfoHash }}</td>
                    </tr>
                    <tr>
                        <td><a href="{{ .Torrent.DownloadLink }}">Download</a></td>
                    </tr>
                </tbody>
            </table>
            <hr />
            <p> Files </p>
            <table>
                <tbody>
                    <tr>
                        <td> Name </td>
                        <td> Size </td>
                    </tr>
                    {{ range .Files }}
                    <tr>
                        <td> {{ .Name }} </td>
                        <td> {{ .Size }} B </td>
                    </tr>
                    {{ end }}
                    <tr>
                    </tr>
                    <tr>
                        <td> Total Size: </td>
                        <td> {{ .Torrent.Size }} B </td>
                    </tr>
                </tbody>
            </table>
        </center>
    </body>
</html>

<html>
    <head>
      <title> {{ .Site }} </title>
      <link href="http://{{ .Domain }}?t=atom" type="application/atom+xml" rel="alternate" title="recent torrents on {{ .Site }}" />
    </head>
    <body>
        <center>
            <h1> {{ .Site }} </h1>
            <hr />
            <h3><a href="/s/">Tag Search</a></h3>
            <h3> Categories </h3>
        <table>
            <tbody>
                {{ range .Categories }}
                <tr>
                    <td><a href="/c/{{ .ID }}/">{{ .Name }}</a></td>
                </tr>
                {{ end }}
            </tbody>
        </table>
        <hr />
        <h3> Recent Uploads </h3>
        <table>
            <thead>
                <tr>
                    <th>Category</th>
                    <th>Name</th>
                    <th>Uploaded</th>
                </tr>
            </thead>
            <tbody>
                {{ range .Torrents }}
                <tr>
                    <td><a href="/c/{{ .Category.ID }}/">{{ .Category.Name }}</a></td>
                    <td><a href="/t/{{ .InfoHash }}/">{{ .Name}}</a></td>
                    <td>{{ .UploadedAt }}</td>
                </tr>{{ end }}
            </tbody>
        </table>
        <hr />
        <h3> Source Code </h3>
            <p> <a href="http://git.psii2pdloxelodts.onion/psi/torrent.ano/"> onion </a> </p>
            <p> <a href="http://git.psi.i2p/psi/torrent.ano/"> i2p </a> </p>
        </center>
    </body>
</html>
